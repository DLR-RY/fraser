<?xml version="1.0"?>
<ModelsConfiguration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../schemas/models-config.xsd">
	<!-- TODO: XML-Schema should just allow port numbers from x to y -->
	<Hosts>
		<Host id="1">
			<Name>master</Name>
			<Address>localhost</Address>
		</Host>
		<Host id="2">
			<Name>slave</Name>
			<Address>localhost</Address>
		</Host>
	</Hosts>

	<Models>
		<Model id="1" persist="true">
			<Name>simulation_model</Name>
			<HostRef hostID="2" />
		</Model>

		<Model persist="true" id="2">
			<Name>event_queue</Name>
			<HostRef hostID="1" />
		</Model>

		<Model persist="true" id="3">
			<Name>model_1</Name>
			<HostRef hostID="1" />
			<Dependencies>
				<ModelRef modelID="2" />
				<ModelRef modelID="4" />
			</Dependencies>
		</Model>

		<Model persist="true" id="4">
			<Name>model_2</Name>
			<HostRef hostID="1" />
			<Dependencies>
				<ModelRef modelID="2" />
				<ModelRef modelID="3" />
			</Dependencies>
		</Model>
	</Models>
	<!-- TODO: Other ports should be excluded (Specify port numbers explicitly) -->
	<OtherPorts>
		<FrontendPort>5570</FrontendPort>
		<SynchronizationPort>5560</SynchronizationPort>
	</OtherPorts>
</ModelsConfiguration>

